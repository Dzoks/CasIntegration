<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"

    tools:ignore="ContentDescription">

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lblFname"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/type"
            android:layout_height="wrap_content"
            android:layout_width="90dp"
            android:padding="15dp"
            android:text="Ime:" />
        <TextView
            android:id="@+id/fname"
            app:layout_constraintStart_toEndOf="@id/lblFname"
            app:layout_constraintTop_toBottomOf="@id/type"
            android:layout_width="wrap_content"
            android:padding="15dp"
            android:text="Ime"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lblLname"
            android:padding="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lblFname"
            android:layout_width="90dp"
            android:text="Prezime:"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lblJmbg"
            android:padding="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lblLname"
            android:layout_width="90dp"
            android:text="JMBG:"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lname"
            android:padding="15dp"
            app:layout_constraintLeft_toRightOf="@id/lblLname"
            app:layout_constraintTop_toBottomOf="@id/fname"
            android:layout_width="wrap_content"
            android:text="Prezime:"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/jmbg"
            android:padding="15dp"
            app:layout_constraintLeft_toRightOf="@id/lblJmbg"
            app:layout_constraintTop_toBottomOf="@id/lname"
            android:layout_width="wrap_content"
            android:text="JMBG:"

            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/type"
            android:padding="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="150dp"
            android:text="VozaÄka dozvola"
            android:background="@color/design_default_color_primary"
            android:textColor="#ffffff"
            android:layout_height="wrap_content" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>